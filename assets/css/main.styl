.blog-page {
    .v-tabs {
        margin-bottom: 4rem;
        border-bottom: 1px solid #ccc;
    }
}

.post {
    border-left: 3px solid $primary;
    padding-left: 1rem;

    &:not(:last-child) {
        margin-bottom: 4rem;
    }

    &__headline {
        line-height: 1.25;
        margin-bottom: 1rem;
    }

    &__category {
        text-transform: uppercase;
        font-weight: bold;
    }

    &__content {
        color: #7D7D7D;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    &__meta {
        font-size: 12px;
    }
}

.intro-section {
    h1, h2 {
        color: $primary;
    }
}