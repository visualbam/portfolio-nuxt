//    padding: 0;
//    margin-bottom: -8px;
//    border-bottom: 1px solid #ccc;
//}

.blog-page {
    .v-tabs {
        border-bottom: 1px solid #ccc;
    }
}

.post-list-item {
    &__title {
        line-height: 1.25;
        margin-bottom: 1rem;
    }
    &__category {
        text-transform: uppercase;
        font-weight: bold;
    }
    &__content {
        color: #7D7D7D;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }
    &__meta {
        font-size: 12px;
        color: $secondary;
    }
}


.post-detail {
    &__title {
        line-height: 1.25;
        margin-bottom: 1rem;
        color: $primary;
    }
    &__category {
        text-transform: uppercase;
        font-weight: bold;
    }
    &__content {
        color: #7D7D7D;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }
    &__meta {
        font-size: 12px;
        color: $secondary;
    }
}


.intro-section {
    h1, h2 {
        color: $primary;
    }
}