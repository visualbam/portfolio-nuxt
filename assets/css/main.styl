.logo {
    width: 100px;
    margin-bottom: -5px;
    cursor: pointer;
}

.v-content__wrap {
    background: white;
}

.v-tabs__slider {
    height: 3px;
}

.v-toolbar__items {
    //margin: 0 auto;
    color: white;

    .v-btn__content {
        color: white;
        font-size: 12px;
    }
}

.v-toolbar__title {
    // this is fixed so that it's removed from the content to align the nav in the middle correctly
    position: fixed;
    left: 15px;
}

nav.v-toolbar {
    background-color:rgba(0, 0, 0, 0)!important;
    &.navigation {
        background: #151030;
        background-image: url("../images/nav-bg.svg") no-repeat;
        background-image: url("../images/nav-bg.svg") , linear-gradient(0.25turn, #151030, $primary)!important;
        background-size: cover;

        .v-toolbar__title {
            left: 0;
        }

        .v-toolbar__content {
            padding: 0;
        }
    }
}

.v-toolbar__content {
    justify-content: center;
}

