$primary = #ed5a73;
$development-color = #F9B967;
$link-color = #BA6DDB;

.logo {
    width: 100px;
    margin-bottom: -5px;
}

.v-content__wrap {
    background: white;
}

.v-tabs__slider {
    height: 3px;
}

.v-toolbar__items {
    margin: 0 auto;
    color: white;

    .v-btn__content {
        color: white;
    }
}

.v-toolbar__title {
    // this is fixed so that it's removed from the content to align the nav in the middle correctly
    position: fixed;
}

nav.v-toolbar {
    background: #151030!important;
}

.v-toolbar__content {
    background: url("../../assets/nav-bg.svg") no-repeat;
    background-size: cover;
}

.v-tabs {
    margin-top: -24px;
}

.blog-page {
    max-width: 800px;
    padding: 0 4rem 4rem;

    .v-tabs {
        margin-bottom: 4rem;
        border-bottom: 1px solid #ccc;
    }
}

.post {
    border-left: 3px solid $primary;
    padding-left: 1rem;

    &:not(:last-child) {
        margin-bottom: 2rem;
    }


    &__category {
        text-transform: uppercase;
        font-weight: bold;
    }

    &__content {
        color: #7D7D7D;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }
}